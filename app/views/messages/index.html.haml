.wrapper
  = render :partial => "devise/shared/side_bar"
  .chat
    .header
      .left-header
        .left-header__title
          = @group.name
        %ul.left-header__members
          Member：
          %li.member= @members
      .right-header
        = link_to edit_group_path(@group) do
          .right-header__button Edit
    .messages
      = render partial: 'message', collection: @messages
    .form
      = form_for [@group, @message], html: {id: "new_message"} do |f|
        = f.text_field :content, class: 'form__messsage', placeholder: 'type a message'
        .form__mask
          = f.label :image, class: 'form__mask__image' do
            = fa_icon 'picture-o', class: 'icon'
            = f.file_field :image, class: 'hidden'
        = f.submit 'Send', "data-disable-with": "送信中...", class: 'form__submit'
